import hector.*
import cultivos.*
import wollok.game.*


describe "granjaville"{

	method initialize() {
		game.clear()
		game.addVisual(hector)
	}
	
	
	test "sembrar" {
	
		hector.sembrar(maiz)
		const colliders = game.colliders(hector)
		assert.equals(1, colliders.size())
	
	}
	
	test "ocupado" {
		hector.sembrar(maiz)
		assert.throwsException({hector.sembrar(maiz)})
	}

}