import hector.*
import cultivos.*
import wollok.game.*


describe "granjaville"{

	method initialize() {
		game.clear()
		game.addVisual(hector)
	}
	
	test "sembrar" {
	
		hector.position(game.center())
		hector.sembrarMaiz()
		const colliders = game.colliders(hector)
		assert.equals(1, colliders.size())
	
	}
	
	test "ocupado" {
		hector.sembrar(new Maiz())
		assert.throwsException({hector.sembrar(new Maiz())})
	}

}